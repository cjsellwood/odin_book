<%- layout("layout/boilerplate") %>
<section class="form-wrapper">
  <div>
    <h1>Login</h1>
    <form class="form" action="/login" method="POST" novalidate>
      <div>
        <div>
          <label for="email">Email*</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Email"
            required
          />
          <div class="validate-msg"></div>
        </div>
        <div>
          <label for="password">Password*</label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Password"
            required
            minlength="8"
          />
          <div class="validate-msg"></div>
        </div>
        <button type="submit" aria-label="login">Login</button>
        <button id="demo-button" type="button" class="blue" aria-label="try demo user">
          Try Demo User
        </button>
      </div>
    </form>
  </div>
</section>
